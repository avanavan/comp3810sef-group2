<!DOCTYPE html>
<html>

<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="library-header">
        <h2>Simple Library System</h2>
    </div>
    <div class="container">
        <div class="dashboard-top">
            <div class="member-card">
                <div class="member-info">
                    <h1>Hello, <%= user.username %></h1>
                    <p class="member-status">Active Member</p>
                </div>
            </div>
            <div class="stat-box">
                <div class="stat-value"><%= borrowedBooks.length %></div>
                <div class="stat-label">Books Borrowed</div>
            </div>
        </div>
        <h3>Your Currently Borrowed Books</h3>
        <% if (borrowedBooks.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Book name</th>
                        <th>Author</th>
                        <th>Book Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% borrowedBooks.forEach(book => { %>
                        <tr>
                            <td><%= book.title %></td>
                            <td><%= book.author %></td>
                            <td><%= book.publishedYear %></td>
                            <td>
                                <form action="/return-book" method="POST" style="display:inline;">
                                    <input type="hidden" name="bookID" value="<%= book._id %>">
                                    <button type="submit" class="btn-warning">Return</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
        <div class="mt-3">
            <a href="/updateUsername">Update Username</a>
            <a href="/borrowBook">Borrow Books</a>
            <a href="/logout">Logout</a>
        </div>
    </div>
</body>

</html>