<!DOCTYPE html>
<html>

<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body class="container mt-5">
    <h1>Hello <%= user.username %></h1> </br>
    <h3>You have borrowed <%= borrowedBooks.length %> books </h3>
    <% if (borrowedBooks.length> 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Book name</th>
                    <th>Author</th>
                    <th>Book Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% borrowedBooks.forEach(book=> { %>
                    <tr>
                        <td><%= book.title %></td>
                        <td><%= book.author %></td>
                        <td><%= book.publishedYear %></td>
                        <td>
                            <form action="/return-book" method="POST" style="display:inline;">
                                <input type="hidden" name="bookID" value="<%= book._id %>">
                                <button type="submit" class="btn btn-warning">Return</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <% } %>
            </br></br>
            <a href="/updateUsername">Update Username</a> </br>
            <a href="/borrowBook">Borrow Books</a> <br>
            <a href="/logout">Logout</a> <br>
</body>

</html>